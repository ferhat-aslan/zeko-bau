---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";
import Est1 from "@images/est-1.jpg";
import Estrich1 from "@images/estrich1.jpg";
import Plaster4 from "@images/plaster-4.jpg";
import Beton1 from "@images/beton1.jpg";
import Putzbau1 from "@images/putzbau1.jpg";
import Estrich2 from "@images/estrich2.jpg";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Estrichbau Dienstleistung",
    subTitle:
      "Estrichbau ist eine spezialisierte Dienstleistung im Bauwesen, die sich auf das Verlegen von Estrichen konzentriert. Estrich bildet die Grundlage für verschiedene Bodenbeläge und sorgt für eine ebene und stabile Oberfläche. Unsere Experten bieten professionelle Estricharbeiten, die höchsten Qualitätsstandards entsprechen. Wir verwenden modernste Techniken und Materialien, um langlebige und belastbare Estrichlösungen zu gewährleisten. Vertrauen Sie auf unsere Erfahrung und Kompetenz für Ihr Bauprojekt.",
    single: false,
    imgOne: Est1,
    imgOneAlt: "Estrichbau ist eine spezialisierte Dienstleistung im Bauwesen",
    imgTwo: Estrich1,
    imgTwoAlt: "Estrichbau Dienstleistung",
  },
  {
    isRightSection: false,
    title: "Putzbau Dienstleistung",
    subTitle:
      "Putzbau ist eine wesentliche Dienstleistung im Baugewerbe, die das Verputzen von Wänden und Decken umfasst. Der Putz dient sowohl der ästhetischen Aufwertung als auch dem Schutz und der Verbesserung der Wärmedämmung von Gebäuden. Unsere erfahrenen Fachkräfte führen Putzarbeiten präzise und effizient aus, unter Einsatz hochwertiger Materialien und fortschrittlicher Techniken. Wir garantieren langlebige, gleichmäßige und professionelle Ergebnisse. Vertrauen Sie auf unser Know-how für Ihr Bauvorhaben.",
    img: Plaster4,
    imgAlt: "Putzbau ist eine wesentliche Dienstleistung im Baugewerbe",
  },
  {
    isRightSection: true,
    title: "Betonmauer Dienstleistung",
    subTitle:
      "Unsere Betonmauer-Dienstleistung bietet Ihnen hochwertige und langlebige Lösungen für alle Bauprojekte. Wir spezialisieren uns auf das Errichten von stabilen und robusten Betonmauern, die sowohl funktional als auch ästhetisch ansprechend sind. Mit unserer umfassenden Expertise und dem Einsatz modernster Technologien gewährleisten wir präzise und effiziente Arbeit. Vertrauen Sie auf unsere Fachkompetenz und Erfahrung für zuverlässige und professionelle Betonmauerarbeiten.",
    single: false,
    imgOne: Beton1,
    imgOneAlt: "Betonmauer-Dienstleistung ",
    imgTwo: Putzbau1,
    imgTwoAlt:
      "Betonmauer-Dienstleistung bietet Ihnen hochwertige und langlebige Lösungen für alle Bauprojekte",
  },
  {
    isRightSection: false,
    title: "Bodenbeschichtung Dienstleistung",
    subTitle:
      "Unsere Bodenbeschichtungs-Dienstleistung bietet maßgeschneiderte Lösungen für verschiedene Anwendungsbereiche. Wir verwenden hochwertige Materialien und modernste Technologien, um strapazierfähige, langlebige und ästhetisch ansprechende Bodenbeschichtungen zu gewährleisten. Ob für Industrie, Gewerbe oder private Räume – unser erfahrenes Team sorgt für eine präzise und effiziente Umsetzung. Vertrauen Sie auf unsere Fachkompetenz für professionelle und zuverlässige Bodenbeschichtungen.",
    img: Estrich2,
    imgAlt: "Bodenbeschichtungs-Dienstleistung ",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://www.zekobaugmbh.com/services",
    url: "https://www.zekobaugmbh.com/services",
    name: "Experten für Bauleistungen - Estrichbau - Betonmauer - Putzbau - Bodenbeschichtung | Zeko Bau",
    description:
      "Zeko Bau verbindet Fachwissen mit Ihren Visionen und bietet einen außergewöhnlichen Service und umfassende Lösungen im Bauwesen, von der Beratung bis zur Fertigstellung des Projekts.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://www.zekobaugmbh.com",
      name: "Zeko Bau",
      description:
        "Zeko Bau bietet fachkundige Baudienstleistungen, die alle Ihre Projektanforderungen erfüllen.",
    },
    inLanguage: "de-DE",
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Fachwissen mit Ihrer Vision vereinen"
    subTitle="Wir bei Zeko Bau sind stolz darauf, umfassende Lösungen und außergewöhnlichen Service in der Bauindustrie zu bieten. Unser erfahrenes Team widmet sich der Aufgabe, Ihr Projekt von der Planung bis zur Fertigstellung mit einer Reihe spezialisierter Dienstleistungen zu unterstützen."
    btnExists={true}
    btnTitle="Konsultation vereinbaren"
    btnURL="/kontakt"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="Die Zahlen"
    subTitle="Unser Engagement für Qualität und Zuverlässigkeit zeigt sich in jedem Projekt, das wir durchführen. Wir von Zeko Bau sind bestrebt, branchenführende Dienstleistungen zu erbringen, die sicherstellen, dass Ihre Bauprojekte von Dauer sind."
    mainStatTitle="96%"
    mainStatSubTitle="unserer Kunden bewerten ihre Erfahrung mit Zeko Bau als außergewöhnlich"
    stats={[
      {
        stat: "99.8%",
        description: "Projektabschlussquote",
      },
      {
        stat: "5,000+",
        description: "erfolgreiche Installationen",
      },
      {
        stat: "85%",
        description: "Kundenwachstum von Jahr zu Jahr",
      },
    ]}
  />
</MainLayout>
