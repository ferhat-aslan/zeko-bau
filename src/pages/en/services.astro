---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";
import { getRelativeLocaleUrl } from "astro:i18n";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";
import Est1 from "@images/est-1.jpg";
import Estrich1 from "@images/estrich1.jpg";
import Plaster4 from "@images/plaster-4.jpg";
import Beton1 from "@images/beton1.jpg";
import Putzbau1 from "@images/putzbau1.jpg";
import Estrich2 from "@images/estrich2.jpg";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Screed construction service",
    subTitle:
      "Screed construction is a specialized service in the construction industry that focuses on the laying of screeds. Screed forms the basis for various floor coverings and ensures an even and stable surface. Our experts offer professional screed work that meets the highest quality standards. We use state-of-the-art techniques and materials to ensure durable and resilient screed solutions. Rely on our experience and expertise for your construction project.",
    single: false,
    imgOne: Est1,
    imgOneAlt: "Estrichbau ist eine spezialisierte Dienstleistung im Bauwesen",
    imgTwo: Estrich1,
    imgTwoAlt: "Estrichbau Dienstleistung",
  },
  {
    isRightSection: false,
    title: "Plastering service",
    subTitle:
      "Plastering is an essential service in the construction industry that involves plastering walls and ceilings. Plastering is used both for aesthetic enhancement and to protect and improve the thermal insulation of buildings. Our experienced specialists carry out plastering work precisely and efficiently, using high-quality materials and advanced techniques. We guarantee long-lasting, even and professional results. Rely on our expertise for your building project.",
    img: Plaster4,
    imgAlt: "Putzbau ist eine wesentliche Dienstleistung im Baugewerbe",
  },
  {
    isRightSection: true,
    title: "Concrete wall service",
    subTitle:
      "Our concrete wall service offers you high-quality and durable solutions for all construction projects. We specialize in building stable and robust concrete walls that are both functional and aesthetically pleasing. With our extensive expertise and the use of state-of-the-art technologies, we guarantee precise and efficient work. Trust our expertise and experience for reliable and professional concrete wall work.",
    single: false,
    imgOne: Beton1,
    imgOneAlt: "Betonmauer-Dienstleistung ",
    imgTwo: Putzbau1,
    imgTwoAlt:
      "Betonmauer-Dienstleistung bietet Ihnen hochwertige und langlebige Lösungen für alle Bauprojekte",
  },
  {
    isRightSection: false,
    title: "Floor coating service",
    subTitle:
      "Our floor coating service offers customized solutions for various applications. We use high-quality materials and state-of-the-art technologies to ensure hard-wearing, durable and aesthetically pleasing floor coatings. Whether for industrial, commercial or private spaces, our experienced team ensures precise and efficient implementation. Put your trust in our expertise for professional and reliable floor coatings.",
    img: Estrich2,
    imgAlt: "Bodenbeschichtungs-Dienstleistung ",
  },
];
const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://www.zekobaugmbh.com/services",
    url: "https://www.zekobaugmbh.com/services",
    name: "Expert Construction Services | Zeko Bau | Screed | Plastering | Concrete Wall | Floor Coating",
    description:
      "Uniting expertise with your vision, Zeko Bau provides exceptional service and comprehensive solutions in the  construction industry, from consultation to project completion.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://www.zekobaugmbh.com",
      name: "Zeko Bau",
      description:
        "Zeko Bau offers top-tierexpert construction services to meet all your project needs.",
    },
    inLanguage: "en-EN",
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Uniting Expertise with Your Vision"
    subTitle="At Zeko Bau, we take pride in providing comprehensive solutions and exceptional service in thehardware and construction industry. Our experienced team is dedicated to supporting your project from inception to completion with a range of specialized services."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="#"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="By the Numbers"
    subTitle="Our commitment to quality and reliability is evident in every project we undertake. At Zeko Bau, we are dedicated to delivering industry-leading services that ensure your construction projects are built to last."
    mainStatTitle="96%"
    mainStatSubTitle="of our clients rate their experience with Zeko Bau as exceptional"
    stats={[
      {
        stat: "99.8%",
        description: "project completion rate",
      },
      {
        stat: "5,000+",
        description: "successful installations",
      },
      {
        stat: "85%",
        description: "client growth year-over-year",
      },
    ]}
  />
</MainLayout>
